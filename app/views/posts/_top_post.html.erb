<% @top_post.each do |post| %>
  <div class="blog-grids wow fadeInDown top-post">
    <div class="blog-grid-left img-top-post">
      <%= link_to image_tag(post.picture), post %>
    </div>
    <div class="title-top-post">
      <%= link_to (post.title.truncate_words 8), post %> <small>(<%= post.comments.size %> comments)</small>
    </div>
  </div>
<% end %>
