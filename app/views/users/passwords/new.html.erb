<h2><%= t ".forgot_pass" %><h2>
<%= form_for resource, as: resource_name, url: password_path(resource_name) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, t(".email") %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit t(".send_me") %>
  </div>
<% end %>
<%= render "users/shared/links" %>
