<h2><%= t ".change_pass" %></h2>

<%= form_forresource, as: resource_name, url: password_path(resource_name) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t(".new_pass") %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t ".pass_length" %>)</em>
    <% end %>
    <%= f.password_field :password, class: "form-controll" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t(".confirm_pass") %><br />
    <%= f.password_field :password_confirmation, class: "form-controll" %>
  </div>

  <div class="actions">
    <%= f.submit t(".change") %>
  </div>
<% end %>

<%= render "users/shared/links" %>
