<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xs-offset-0 col-sm-offset-0 toppad">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t ".user_profile" %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <div class="avatar">
                <%= image_tag @user.avatar %>
              </div>
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <td><%= @user.name %></td>
                  </tr>
                  <tr>
                    <td><%= link_to @user.email, "mailto:" + @user.email %></td>
                  </tr>
                  <tr>
                    <td><%= @user.address %></td>
                  </tr>
                  <tr>
                    <td><%= @user.phone %></td>
                  </tr>
                </tbody>
              </table>
              <% if current_user == @user %>
                <%= link_to t(".newpost"), new_post_path, class: "btn btn-primary" %>
              <% else %>
                <a href="#" class="btn btn-primary"><%= t ".follow" %></a>
              <% end %>
              <% if can? :update, @user %>
                <span class="pull-right">
                  <%= link_to t(".edit_profile"), edit_user_registration_path,
                    class: "btn btn btn-warning" %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xs-offset-0 col-sm-offset-0 toppad">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t ".timeline" %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <%= render "shared/feed", feed_items: @feed_items %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
