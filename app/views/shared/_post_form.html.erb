<%= form_for post do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-3">
      <div class="card">
        <ul class=" list-group-flush form-post-dz">
          <li class="list-group-item">
            <label for="exampleInput">Info BLOG</label>
          </li>
          <li class="list-group-item">
            <%= f.label :title, t(".title") %>
            <%= f.text_field :title, class: "form-control" %>
          </li>
          <li class="list-group-item">
            <%= f.label :description, t(".description") %>
            <%= f.text_field :description, class: "form-control" %>
          </li>
          <li class="list-group-item">
            <%= f.label :publish, t(".publish") %>
            <%= f.select :is_published, options_for_select([true, false]) %>
          </li>
          <li class="list-group-item">
            <%= f.file_field :picture, class: "add-pic" %>
          </li>
          <li class="list-group-item">
            <%= f.label :tags, t(".tags") %>
            <%= f.text_field :all_tags, class: "form-control" %>
          </li>
        </ul>
      </div>
      <div class="actions">
        <%= f.submit t(".save"), class: "btn btn-success btn-block" %>
      </div>
    </div>
    <div class="col-md-9">
      <div class="form-group">
        <%= f.text_area :content, rows: "13" %>
      </div>
    </div>
  </div>
<% end %>
