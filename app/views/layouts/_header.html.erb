<div class="header" id="ban">
  <div class="container">
    <div class="header_right wow fadeInLeft animated animated">
      <nav class="navbar navbar-default">
        <div class="collapse navbar-collapse nav-wil" id="bs-example-navbar-collapse-1">
          <nav class="link-effect-7" id="link-effect-7">
            <ul class="nav navbar-nav">
              <li><%= link_to t(".home"), root_path %></li>
              <li><%= link_to t(".authors"), users_path %></li>
              <% if user_signed_in? %>
                <li><%= link_to t(".post"), new_post_path %></li>
                <% if current_user.is_admin? %>
                  <li><%= link_to t(".admin"), admin_root_path %></li>
                <% end %>
                <li><%= link_to t(".account"), current_user %></li>
                <li><%= link_to t(".logout"), destroy_user_session_path,
                  method: :delete %></li>
              <% else %>
                <li><%= link_to t(".sign_up"), signup_path %></li>
                <li><%= link_to t(".sign_in"), signin_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
      </nav>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
<div class="header-bottom">
  <div class="container">
    <div class="logo wow fadeInDown">
      <h1><%= link_to t(".bebe_blog"), root_path, class: "nav-link" %></h1>
      <p><label class="of"></label><%= t ".style" %><label class="on"></label></p>
    </div>
  </div>
</div>
